#categories
  position fixed
  top 61px
  right 10px
  box-shadow 0 1px 5px rgba(0, 0, 0, 0.65)

  .list-group-item
    .glyphicon
      visibility hidden
      margin-right 12px
      color #555
    .category-name
      color #888

    &.selected
      .glyphicon
        visibility visible
      .category-name
        color #555

#overlay
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  z-index 1000
  background-color rgba(0, 0, 0, 0.5)

  .container
    margin-top 200px

  .jumbotron .glyphicon
    margin-right 12px

  #files
    visibility hidden

