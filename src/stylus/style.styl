body, html
  margin 0
  height 100%

#map
	width 100%
	height 100%

.navbar
  margin-bottom 0px

.hidden
  display none

#map-container
  width 100%
  height 100%
  padding 0px

#map
  width 100%
  height 100%

  .leaflet-control-layers
    .leaflet-control-layers-base
    .leaflet-control-layers-separator
      display none

    label
      font-weight 400

  .leaflet-popup-content-wrapper
    padding 0px
    .leaflet-popup-content
      margin 0px

      .panel
        border none
        margin-bottom 0px
        .container-fluid
          margin 0
          padding 0

        p
          margin 0 0 10px 0

        .lat
        .lng
          color #888

        .lat
          margin-left 15px
        .lat:before
          content: '('
        .lat:after
          content: ' \00b0 N'
        .lng:before
          content: ', '
        .lng:after
          content: ' \00b0 E)'



.list-group
  margin-bottom 0

#search
  position fixed
  top 61px
  left 10px
  box-shadow 0 1px 5px rgba(0, 0, 0, 0.65)

#search
#search-results
#no-search-results
  width 350px
  border-radius 4px

#search-results
#no-search-results
  position fixed
  top 105px
  left 10px

#search-results
  bottom 15px
  pointer-events none

  .wrapper
    box-shadow 0 1px 5px rgba(0, 0, 0, 0.65)
    max-height 100%
    overflow-y auto

    .list-group-item
      pointer-events auto

#no-search-results
  box-shadow 0 1px 5px rgba(0, 0, 0, 0.65)
  .list-group-item
    color #888

#categories
  position fixed
  top 61px
  right 10px
  box-shadow 0 1px 5px rgba(0, 0, 0, 0.65)

  .list-group-item
    .glyphicon
      visibility hidden
      margin-right 12px
      color #555
    .category-name
      color #888

    &.selected
      .glyphicon
        visibility visible
      .category-name
        color #555

#overlay
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  z-index 1000
  background-color rgba(0, 0, 0, 0.5)

  .container
    margin-top 200px

  .jumbotron .glyphicon
    margin-right 12px

  #files
    visibility hidden

