body, html
  margin 0
  height 100%

#map
	width 100%
	height 100%

.navbar
  margin-bottom 0px

.hidden
  display none

#map-container
  width 100%
  height 100%
  padding 0px

#map
  width 100%
  height 100%

  .leaflet-control-layers
    .leaflet-control-layers-base
    .leaflet-control-layers-separator
      display none

    label
      font-weight 400

#search-wrapper
  position fixed
  top 61px
  left 10px
  height 82%

#search
#search-results
  width 350px
  border-radius 4px
  box-shadow 0 1px 5px rgba(0, 0, 0, 0.65)

#search-results
  margin-top 10px

